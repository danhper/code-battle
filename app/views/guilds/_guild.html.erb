  <div class="code">
    <h4 class="<%= guild.url_safe_name %>">
      <%= link_to guild do %>
        <%= image_tag "#{guild.url_safe_name}-logo.png", alt: guild.name %>
        <%= t 'guild.members_count_label' %>:
        <%= guild.users.count %>
      <% end %>
    </h4>
    <p>
      <%= render partial: 'users/avatar', collection: guild.users.limit(16), as: :user %>
    </p>
    <% if user_signed_in? %>
      <span class="more">
        <% text_key = current_user.in_guild?(guild) ? 'guild.leave' : 'guild.enter' %>
          <%= link_to t(text_key), guild, class: 'btn btn-default' %>
      </span>
    <% end %>
</div>
