  <div class="code guild"
       data-in-guild="<%= user_signed_in? && current_user.in_guild?(guild) %>"
       data-url-safe-name="<%= guild.url_safe_name %>"
  >
    <h4 class="<%= guild.url_safe_name %>">
      <%= link_to guild do %>
        <%= image_tag "#{guild.url_safe_name}-logo.png", alt: guild.name %>
        <%= t 'guild.members_count_label' %>:
        <span class="user-count"><%= guild.users.count %></span>
      <% end %>
    </h4>
    <p>
      <%= render partial: 'users/avatar', collection: guild.users.limit(16), as: :user %>
    </p>
    <% if user_signed_in? %>
      <span class="more">
        <% text_key = current_user.in_guild?(guild) ? 'guild.leave' : 'guild.enter' %>
          <%= link_to t(text_key), guild, class: 'btn btn-default enter-leave-link' %>
      </span>
    <% end %>
</div>
