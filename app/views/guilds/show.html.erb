<%= @guild.name %>


<ul class="nav nav-tabs">
  <li class="active">
    <a href="#users" data-toggle="tab">Sources</a>
  </li>
  <li>
    <a href="#codes" data-toggle="tab">Codes</a>
  </li>
</ul>

<div class="tab-content">
  <div id="users" class="users tab-pane active">
    <% if @guild.users.empty? %>
      No member in this guild.
    <% else %>
      <%= render @guild.users %>
    <% end %>
  </div>
  <div id="codes" class="codes tab-pane">
    <% if @guild.codes.empty? %>
      No spell casted by this guild.
    <% else %>
      <%= render partial: 'codes/code_line', collection: @guild.codes, as: :code, locals: { fields: [:author, :quest] } %>
    <% end %>
  </div>
</div>
