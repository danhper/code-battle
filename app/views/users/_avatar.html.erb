<%= link_to user, class: 'user-info', data: { id: user.id } do %>
  <% if defined?(text_before) %>
    <%= user.username %>
  <% end %>
  <%= gravatar_image_tag user.email, alt: user.username, class: 'avatar' %>
  <% if defined?(text) && text %>
    <br>
    <%= user.username %>
  <% end %>
<% end %>
