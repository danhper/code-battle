<%= link_to [code.quest, code], class: "code #{code.guild.url_safe_name}" do %>
  <%= t('code.other_used_language', language: image_tag("#{code.guild.url_safe_name}-logo.png", alt: code.guild.name, class: 'lang')).html_safe %>
  <span class="author">
    <%= t 'code.author' %>:
    <%= gravatar_image_tag code.author.email, alt: 'avatar', class: 'avatar' %>
  </span>
<% end %>
