      <div class="code <%= medal %>">
        <h4 class="<%= code.guild.name %>">
          <%= image_tag "#{code.guild.url_safe_name}-logo.png", alt: code.guild.name, class: 'lang' %>
          <%= t 'code.author' %>:
          <% link_to code.author do %>
            <%= code.author.username %>
            <%= gravatar_image_tag code.author.email, alt: code.author.username %>
          <% end %>
        </h4>
        <%= code.formatted_source.html_safe %>

        <span class="more">
          <%= link_to t('code.read_more'), [code.quest, code] %>
        </span>
      </div>
