<% if user_signed_in? && @code.author != current_user %>
  <% if user.likes? code %>
    <%= link_to 'Like', like_quest_code [@quest, @code], method: post, remote: true %>
  <% else %>
    <%= link_to 'Unlike', unlike_quest_code [@quest, @code], method: delete, remote: true %>
  <% end %>
<% end %>
